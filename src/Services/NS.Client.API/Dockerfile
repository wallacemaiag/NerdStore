#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/aspnet:5.0-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/sdk:5.0-buster-slim AS build
WORKDIR /src
COPY ["src/Services/NS.Client.API/NS.Client.API.csproj", "src/Services/NS.Client.API/"]
RUN dotnet restore "src/Services/NS.Client.API/NS.Client.API.csproj"
COPY . .
WORKDIR "/src/src/Services/NS.Client.API"
RUN dotnet build "NS.Client.API.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "NS.Client.API.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "NS.Client.API.dll"]